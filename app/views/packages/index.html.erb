<div class="row">
	<div class="span8">
		<h3>
			Git commits
		</h3>
		<table class="table-striped table-bordered commits" id="commits">
			<% @commits.each do |commit| %>
			<tr>
				<td>
					<%= commit.id %>
				</td>
				<td>
					<%= commit.author %>
				</td>
				<td>
					<%= time_format(commit.committed_date) %>
				</td>
			</tr>
			<% end %>
		</table>
	</div>
	<div class="span4">
		<%= render :partial => 'form'%>
	</div>
</div>

<div class="row">
	<div class="span12">
		<div id="message">
			
		</div>
		<h3>
			Already packaged
		</h3>
		<table class="table-striped table-bordered commits">
			<% @packages.each do |package| %>
			<tr>
				<td>
					<%= package.commit_id %>
				</td>
				<td>
					<%= package.name %>
				</td>
				<td>
					<%= time_format(package.created_at) %>
				</td>
				<td>
					<%= link_to 'download', '' %>
					<%= link_to 're-package', '' %>
				</td>
			</tr>
			<% end %>
		</table>
	</div>
</div>
